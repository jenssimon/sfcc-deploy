{
  "name": "sfcc-deploy",
  "version": "0.0.0-development",
  "description": "Deploy cartridges to a Salesforce Commerce Cloud (SFCC) instance",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Jens Simon <https://github.com/jenssimon/>",
  "license": "MIT",
  "keywords": [
    "sfcc",
    "demandware",
    "salesforce",
    "commercecloud",
    "sfra",
    "deploy"
  ],
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "deploy.gif"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jenssimon/sfcc-deploy"
  },
  "scripts": {
    "lint": "eslint --fix --ext .tsx,.ts,.jsx,.js ./",
    "tsc": "tsc",
    "prepublishOnly": "tsc",
    "ci-test": "run-s \"ci-test:*\"",
    "ci-test:lint": "eslint --ext .tsx,.ts,.jsx,.js ./",
    "ci-test:tsc": "tsc --noEmit",
    "commit": "cz",
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "archiver": "^5.3.1",
    "chalk": "^4.1.2",
    "cli-step": "^1.0.2"
  },
  "peerDependencies": {
    "dwdav": ">=3.5.1",
    "sfcc-ci": ">=2.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "17.4.2",
    "@commitlint/config-conventional": "17.4.2",
    "@jenssimon/eslint-config-base": "6.6.10",
    "@jenssimon/eslint-config-typescript": "3.6.21",
    "@types/archiver": "5.3.1",
    "@types/node": "18.11.18",
    "commitizen": "4.3.0",
    "cz-conventional-changelog": "3.3.0",
    "dwdav": "3.5.1",
    "eslint": "8.32.0",
    "husky": "8.0.3",
    "lint-staged": "13.1.0",
    "npm-run-all": "4.1.5",
    "pinst": "3.0.0",
    "semantic-release": "20.0.2",
    "sfcc-ci": "2.10.0",
    "ts-node": "10.9.1",
    "typescript": "4.9.4"
  },
  "eslintConfig": {
    "parserOptions": {
      "project": "tsconfig.json",
      "tsconfigRootDir": "."
    },
    "extends": [
      "@jenssimon/base",
      "@jenssimon/typescript"
    ],
    "rules": {
      "sonarjs/cognitive-complexity": "off"
    }
  },
  "packageManager": "yarn@3.3.1",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "**/*.{js,ts}": "eslint"
  },
  "release": {
    "branches": [
      "main"
    ]
  }
}
