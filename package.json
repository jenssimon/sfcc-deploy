{
  "name": "sfcc-deploy",
  "version": "3.1.0",
  "description": "Deploy cartridges to a Salesforce Commerce Cloud (SFCC) instance",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Jens Simon <https://github.com/jenssimon/>",
  "license": "MIT",
  "keywords": [
    "sfcc",
    "demandware",
    "salesforce",
    "commercecloud",
    "sfra",
    "deploy"
  ],
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "deploy.gif"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jenssimon/sfcc-deploy"
  },
  "scripts": {
    "lint": "eslint --fix --ext .tsx,.ts,.jsx,.js ./",
    "tsc": "tsc",
    "prepublishOnly": "tsc",
    "ci-test": "run-s \"ci-test:*\"",
    "ci-test:lint": "eslint --ext .tsx,.ts,.jsx,.js ./",
    "ci-test:tsc": "tsc --noEmit"
  },
  "dependencies": {
    "archiver": "^5.3.0",
    "chalk": "^5.0.0",
    "cli-step": "^1.0.2"
  },
  "peerDependencies": {
    "dwdav": ">=3.5.1",
    "sfcc-ci": ">=2.4.0"
  },
  "devDependencies": {
    "@jenssimon/eslint-config-base": "5.4.1",
    "@jenssimon/eslint-config-typescript": "3.4.2",
    "@types/archiver": "5.3.1",
    "dwdav": "3.5.1",
    "eslint": "8.15.0",
    "npm-run-all": "4.1.5",
    "sfcc-ci": "2.9.1",
    "typescript": "4.6.4"
  },
  "eslintConfig": {
    "parserOptions": {
      "project": "tsconfig.json",
      "tsconfigRootDir": "."
    },
    "extends": [
      "@jenssimon/base",
      "@jenssimon/typescript"
    ],
    "rules": {
      "sonarjs/cognitive-complexity": "off"
    }
  },
  "packageManager": "yarn@3.2.1"
}
